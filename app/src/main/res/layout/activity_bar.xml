<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="338dp"
            app:srcCompat="@drawable/bBack" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:text="이름을 입력해주세요"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:gravity="center_horizontal"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/BcheckBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/bcheckbox1"/>

            <CheckBox
                android:id="@+id/BcheckBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/bcheckbox2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/BcheckBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:background="@android:color/transparent"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/bcheckbox4" />

            <CheckBox
                android:id="@+id/BcheckBox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/bcheckbox3" />

            <CheckBox
                android:id="@+id/BcheckBox5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:background="@android:color/transparent"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/bcheckbox5" />

            <CheckBox
                android:id="@+id/BcheckBox6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/bcheckbox6"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="분위기를 선택해주세요" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/BcheckBox7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:background="@android:color/transparent"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/bcheckbox7"  />

            <CheckBox
                android:id="@+id/BcheckBox8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/bcheckbox8" />

            <CheckBox
                android:id="@+id/BcheckBox9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:background="@android:color/transparent"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/bcheckbox9"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/BcheckBox10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/bcheckbox10" />

            <CheckBox
                android:id="@+id/BcheckBox11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:background="@android:color/transparent"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/bcheckbox11"
                />

            <CheckBox
                android:id="@+id/BcheckBox12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/bcheckbox12"/>

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

            <Button
                android:id="@+id/Breserve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/result" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>